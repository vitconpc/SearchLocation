<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.update_infor.UpdateInforActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_30"
                android:padding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_avatar">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_150"
                    android:layout_gravity="center_horizontal"
                    android:onClick="selectImage"
                    android:src="@drawable/defaultprofile" />
            </LinearLayout>

            <EditText
                android:textSize="@dimen/sp_20"
                android:drawableLeft="@drawable/ic_account_gray"
                android:drawablePadding="@dimen/dp_10"
                android:id="@+id/edt_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/custom_edittext"
                android:ems="10"
                android:hint="@string/enter_name"
                android:inputType="textPersonName" />

            <TextView
                android:onClick="pickDate"
                android:drawablePadding="@dimen/dp_10"
                android:textSize="@dimen/sp_20"
                android:text="--/--/----"
                android:drawableLeft="@drawable/ic_calendar_gray"
                android:id="@+id/txt_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/custom_edittext"
                android:ems="10"/>

            <LinearLayout
                android:paddingTop="@dimen/dp_40"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="Cancel"
                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button"
                    android:text="@string/cancel"
                    android:textAllCaps="false" />
                <Button
                    android:onClick="UpdateInfor"
                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_button"
                    android:text="@string/update"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
