<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.search_near_by.SearchKeyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/edt_enter_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Nhập thời gian(phút)"
                android:inputType="number" />

            <Spinner
                android:id="@+id/spin_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp" />

            <Spinner
                android:id="@+id/spin_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/rbn_driving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lái xe" />

                <RadioButton
                    android:id="@+id/rbn_walking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đi bộ" />

                <RadioButton
                    android:id="@+id/rbn_transit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xe Bus" />

                <RadioButton
                    android:id="@+id/rbn_bicycling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xe đạp" />
            </RadioGroup>

            <EditText
                android:id="@+id/edt_enter_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Nhập từ khóa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:onClick="Cancel"
                    android:text="Hủy bỏ"
                    android:textAllCaps="false" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:onClick="Search"
                    android:text="Tìm kiếm"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>